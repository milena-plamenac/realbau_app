@model realbau_app.api.Models.AddressDetails;

<h4 class="text-center">Address details</h4>

<p>Address: @Model.street  @Model.housenumber, @Model.city </p>
<p>Contact: @Model.email  @Model.phone, @Model.phone2 </p>

 <div class="row">
    <div class="col s12 m6 l6">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Hausbegehung</span>
          <p>Date: @Model.hbdate</p>
          <p>Termin: @Model.hbfrom - @Model.hbto</p>
          <p>Call date: @Model.hbcalldate</p>
        </div>
        <div class="card-action">
          <a class="waves-effect waves-light btn" disabled="@(Model.hbfinished == 1)" style="background-color: #ffc107;"><i class="material-icons left">date_range</i>Get HB term</a>
          <a class="waves-effect waves-light btn" href="#" style="background-color: cadetblue;"><i class="material-icons left" >phone</i>Customer called</a>
          <a class="waves-effect waves-light btn" href="#"><i class="material-icons left">check</i>HB finished</a>
        </div>
      </div>
    </div>

    <div class="col s12 m6 l6">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Tiefbau</span>
          <p>Date: @Model.tdate</p>
          <p>Meter: @Model.meter</p>
        </div>
        <div class="card-action">
           <a class="waves-effect waves-light btn" href="#"><i class="material-icons left">check</i>Tiefbau finished</a>
      
        </div>
      </div>
    </div>
  </div>

